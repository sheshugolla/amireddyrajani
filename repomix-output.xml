    color: rgba(255, 255, 255, 0.6);
    margin: 0;
}

/* ===========================================
   19. SUPPORT POPUP WIDGET
   =========================================== */
.support-popup {
    position: fixed;
    bottom: var(--space-8);
    right: var(--space-8);
    z-index: var(--z-popover);
}

.support-toggle {
    width: 64px;
    height: 64px;
    background: var(--gradient-primary);
    color: var(--white);
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-pink-lg);
    cursor: pointer;
    transition: var(--transition-base);
    border: none;
}

.support-toggle:hover {
    transform: scale(1.1);
}

.support-icon {
    font-size: 32px;
}

.support-close {
    display: none;
    font-size: 28px;
}

.support-popup.active .support-icon {
    display: none;
}

.support-popup.active .support-close {
    display: block;
}

.support-panel {
    position: absolute;
    bottom: 80px;
    right: 0;
    width: 320px;
    background: var(--white);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-2xl);
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
    transition: var(--transition-base);
}

.support-popup.active .support-panel {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.support-header {
    background: var(--gradient-primary);
    color: var(--white);
    padding: var(--space-6);
    border-radius: var(--radius-xl) var(--radius-xl) 0 0;
}

