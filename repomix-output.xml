    --secondary-indigo: #3949AB;           /* Indigo - Integrity & Depth */
    --secondary-indigo-light: #5C6BC0;     /* Lighter shade */
    --secondary-indigo-dark: #283593;      /* Darker shade */
    
    /* ===== NEUTRAL COLORS (Gray Scale) ===== */
    --neutral-50: #FAFAFA;
    --neutral-100: #F5F5F5;
    --neutral-200: #EEEEEE;
    --neutral-300: #E0E0E0;
    --neutral-400: #BDBDBD;
    --neutral-500: #9E9E9E;
    --neutral-600: #757575;
    --neutral-700: #616161;
    --neutral-800: #424242;
    --neutral-900: #212121;
    --white: #FFFFFF;
    --black: #000000;
    
    /* ===== SEMANTIC COLORS (Feedback States) ===== */
    --color-success: #4CAF50;
    --color-success-light: #81C784;
    --color-success-dark: #388E3C;
    
    --color-warning: #FF9800;
    --color-warning-light: #FFB74D;
    --color-warning-dark: #F57C00;
    
    --color-error: #F44336;
