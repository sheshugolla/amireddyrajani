    font-size: var(--text-base);
    transition: var(--transition-base);
}

.footer-links a:hover {
    color: var(--white);
    padding-left: var(--space-2);
}

.newsletter-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
}

.newsletter-form input {
    padding: var(--space-3) var(--space-4);
