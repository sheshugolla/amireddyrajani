    /* ===== GRADIENT COLLECTIONS ===== */
    
    /* Primary Gradients */
    --gradient-primary: linear-gradient(135deg, #C2185B 0%, #7B1FA2 100%);
    --gradient-primary-reverse: linear-gradient(135deg, #7B1FA2 0%, #C2185B 100%);
    --gradient-primary-soft: linear-gradient(135deg, rgba(194, 24, 91, 0.8) 0%, rgba(123, 31, 162, 0.8) 100%);
    
    /* Secondary Gradients */
    --gradient-secondary: linear-gradient(145deg, #EC407A 0%, #FFA726 100%);
    --gradient-secondary-reverse: linear-gradient(145deg, #FFA726 0%, #EC407A 100%);
    
    /* Hero & Overlay Gradients */
    --gradient-hero: linear-gradient(135deg, rgba(194, 24, 91, 0.95) 0%, rgba(123, 31, 162, 0.9) 100%);
    --gradient-hero-alt: linear-gradient(135deg, rgba(21, 101, 192, 0.95) 0%, rgba(57, 73, 171, 0.9) 100%);
    --gradient-overlay: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.7) 100%);
    --gradient-overlay-light: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.4) 100%);
    
    /* Card & Background Gradients */
    --gradient-card: linear-gradient(145deg, rgba(236, 64, 122, 0.1) 0%, rgba(255, 167, 38, 0.1) 100%);
    --gradient-card-hover: linear-gradient(145deg, rgba(236, 64, 122, 0.2) 0%, rgba(255, 167, 38, 0.2) 100%);
    --gradient-light: linear-gradient(135deg, #FAFAFA 0%, #F5F5F5 100%);
    --gradient-subtle: linear-gradient(135deg, rgba(194, 24, 91, 0.05) 0%, rgba(123, 31, 162, 0.05) 100%);
    
    /* Multi-color Gradients */
    --gradient-rainbow: linear-gradient(135deg, #C2185B 0%, #7B1FA2 25%, #3949AB 50%, #1565C0 75%, #00897B 100%);
    --gradient-sunset: linear-gradient(135deg, #FFA726 0%, #EC407A 50%, #7B1FA2 100%);
    --gradient-ocean: linear-gradient(135deg, #00897B 0%, #1565C0 50%, #3949AB 100%);
    
    /* ===== TYPOGRAPHY ===== */
    
    /* Font Families */
    --font-heading: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
    --font-body: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
    --font-mono: 'Courier New', Courier, monospace;
    
    /* Font Sizes (Fluid Typography - Scales with Viewport) */
    --text-xs: clamp(0.75rem, 0.7rem + 0.25vw, 0.875rem);      /* 12px - 14px */
    --text-sm: clamp(0.875rem, 0.8rem + 0.35vw, 1rem);         /* 14px - 16px */
    --text-base: clamp(1rem, 0.95rem + 0.25vw, 1.125rem);      /* 16px - 18px */
    --text-lg: clamp(1.125rem, 1rem + 0.5vw, 1.375rem);        /* 18px - 22px */
    --text-xl: clamp(1.25rem, 1.1rem + 0.75vw, 1.75rem);       /* 20px - 28px */
    --text-2xl: clamp(1.5rem, 1.2rem + 1.25vw, 2.25rem);       /* 24px - 36px */
    --text-3xl: clamp(2rem, 1.5rem + 2vw, 3.5rem);             /* 32px - 56px */
    --text-4xl: clamp(2.5rem, 2rem + 2.5vw, 4.5rem);           /* 40px - 72px */
    --text-5xl: clamp(3rem, 2.5rem + 3vw, 6rem);               /* 48px - 96px */
    
    /* Font Weights */
    --weight-light: 300;
    --weight-regular: 400;
    --weight-medium: 500;
    --weight-semibold: 600;
    --weight-bold: 700;
    --weight-extrabold: 800;
    --weight-black: 900;
    
    /* Line Heights */
    --leading-none: 1;
    --leading-tight: 1.2;
    --leading-snug: 1.4;
    --leading-normal: 1.6;
    --leading-relaxed: 1.8;
    --leading-loose: 2;
    
    /* Letter Spacing */
    --tracking-tighter: -0.05em;
    --tracking-tight: -0.025em;
    --tracking-normal: 0;
    --tracking-wide: 0.025em;
    --tracking-wider: 0.05em;
    --tracking-widest: 0.1em;
    
    /* ===== SPACING SYSTEM (Based on 4px Grid) ===== */
    --space-0: 0;
    --space-px: 1px;
    --space-0-5: 0.125rem;   /* 2px */
    --space-1: 0.25rem;      /* 4px */
    --space-1-5: 0.375rem;   /* 6px */
    --space-2: 0.5rem;       /* 8px */
    --space-2-5: 0.625rem;   /* 10px */
    --space-3: 0.75rem;      /* 12px */
